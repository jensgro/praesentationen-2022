{
  "name": "praesentationen",
  "version": "0.1.0",
  "description": "Pr√§sentationen rund ums Frontend, auf Basis von reveal.js.",
  "scripts": {
    "clean": "rimraf _site",
    "watch:sass": "sass --watch src/assets/scss:_site/assets/css",
    "build:sass": "sass --no-source-map src/assets/scss/reveal.scss:_site/assets/css/reveal.css",
    "watch:eleventy": "eleventy --serve",
    "slides": "eleventy",
    "copyReveal": "gulp cpRev",
    "copyFonts": "gulp copyFonts",
    "copyA11y": "gulp cpA11y",
    "copyA11yImages": "gulp cpA11yImages",
    "copyTest1": "gulp cpTest2",
    "start": "npm-run-all build:sass --parallel watch:*",
    "build": "npm-run-all build:sass slides",
    "test": "npm-run-all slides build:sass copyReveal copyFonts copyA11y copyA11yImages",
    "theme": "npm-run-all build:sass copyA11y"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jensgro/praesentationen"
  },
  "author": {
    "name": "Jens Grochtdreis",
    "email": "jens@grochtdreis.de",
    "url": "https://grochtdreis.de"
  },
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.1",
    "@11ty/eleventy-navigation": "^0.3.2",
    "@11ty/eleventy-plugin-rss": "^1.1.2",
    "@11ty/eleventy-plugin-syntaxhighlight": "^4.1.0",
    "autoprefixer": "^10.4.7",
    "cross-env": "^7.0.3",
    "cssnano": "^5.1.12",
    "gulp": "^4.0.2",
    "markdown-it": "^12.3.2",
    "markdown-it-anchor": "^8.4.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "reveal.js": "^4.3.1",
    "rimraf": "^3.0.2",
    "sass": "^1.53.0"
  },
  "browserslist": [
    "last 2 versions"
  ]
}
