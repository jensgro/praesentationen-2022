<section>
	<h2>Susy anwenden (1)</h2>
<div class="split">
	<div>
<pre><code class="scss">@import "susy";
// Den Grid-Kontext kreieren.
main { @include container(80em); }

// Den Elementen Dimensionen geben
.content-wrap { @include span(25%); }</code></pre>
	</div>
	<div>
<pre><code class="css">main {
  max-width: 80em;
  margin-left: auto;
  margin-right: auto;
}

main:after {
  content: " ";
  display: block;
  clear: both;
}

.content-wrap {
  width: 25%;
  float: left;
  margin-right: 0.93458%;
}</code></pre>
	</div>
</div>
</section>

<section>
	<h2>Susy anwenden (2)</h2>
<div class="split">
	<div>
<pre><code class="scss">@import "susy";

// Den Grid-Kontext kreieren.
main { @include container(80em); }

// Man kann die Anzahl
// der Gridspalten direkt
// in den Aufruf
// des Mixins schreiben:

.content-wrap { @include span(3 of 12); }</code></pre>
	</div>
	<div>
<pre><code class="css">main {
  max-width: 80em;
  margin-left: auto;
  margin-right: auto;
}

main:after {
  content: " ";
  display: block;
  clear: both;
}

.content-wrap {
  width: 23.72881%;
  float: left;
  margin-right: 1.69492%;
}</code></pre>
	</div>
</div>
</section>

<section>
	<h2>Susy anwenden (3)</h2>
<div class="split">
	<div>
		<pre><code class="scss">@import "susy";

// Anzahl der Spalten und Breite des Raums
// zwischen den Spalten (im Verhältnis zur
// Breite der Spalten)

$susy: (
  columns: 12,
  gutters: 1/8,
);

// Man kann auch die Variable
// mit der Anzahl der Gridspalten
// durch Aufruf im Mixin
// überschreiben kann.

.content-wrap { @include span(3); }
.footer-list { @include span(3 of 16)}
</code></pre>
	</div>
	<div>
<pre><code class="css">/*
  main und main:after sind identisch
  zum vorherigen Beispiel.
*/
.content-wrap {
  width: 24.29907%;
  float: left;
  margin-right: 0.93458%;
}

.footer-list {
  width: 18.18182%;
  float: left;
  margin-right: 0.6993%;
}	</code></pre>
	</div>
</div>
</section>


