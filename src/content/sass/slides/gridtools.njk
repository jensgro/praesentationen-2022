<section>
	<h2>Ein Beispiel</h2>
<div class="split">
	<div>
		<pre><code class="scss">@import "singularitygs";

$grids: 12;
$gutters: 1/3;

article {
  @include grid-span(9, 1);
}

// 3 Spalten, beginnend bei der 10.
aside {
  @include grid-span(3, 10);
}</code></pre>
	</div>
	<div>
		<pre><code class="css">article {
  width: 74.46809%;
  float: left;
  margin-right: -100%;
  margin-left: 0%;
  clear: none;
}

aside {
  width: 23.40426%;
  float: right;
  margin-left: 0;
  margin-right: 0;
  clear: none;
}</code></pre>
	</div>
</div>
